<div class="card">
  <h2 class="card-header">Account Verification</h2>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: [resource_name, :paranoid_verification_code], html: { method: :put }) do |f| %>
    <%= render partial: 'devise/shared/error_messages' %>

    <div class="alert alert-info">
      <strong>Your account requires verification. Please contact a Pincanna administrator for your code.</strong>
    </div>
    <p class="lead"></p>
    <p><%= f.label :paranoid_verification_code, t('.verification_code') %><br />
      <%= f.text_field :paranoid_verification_code, value: '', class: 'form-control' %></p>

    <p><%== f.submit 'Submit', class: 'btn btn-primary' %></p>
    <% end %>
  </div>
</div>