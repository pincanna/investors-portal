<div class="card">
  <h4 class="card-header">Add a Secure Document</h4>
  <div class="card-body">
    <%= form_with model: @document, local: true do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :download, 'File' %>
      <%= f.file_field :download, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
    <% end %>
  </div>
</div>