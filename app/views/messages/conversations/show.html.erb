<h1>Conversation: <span class="text-muted">
    <%= @conversation.subject %>
  </span>
</h1>
<div class="row">
  <div class="col-md-4">
    <div class="card">
      <div class="card-body">
        <%= form_with scope: :reply, local: true, url: reply_messages_conversation_path(@conversation) do |f| %>
        <div class="form-group">
          <%= f.text_area :body, class: 'form-control' %>
        </div>

        <%= f.submit 'Reply', class: 'btn btn-sm btn-primary' %>
        <% end %></div>
    </div>
  </div>
  <div class="col-md-8">
    <% @receipts.each do |receipt| %>
    <div class="card">
      <h5 class="card-header"><%= receipt.created_at %></h5>
      <div class="card-body">
        <dl>
          <dt>From</dt>
          <dd><%= receipt.message.sender.name %></dd>

          <dt>To</dt>
          <dd><%= receipt.receiver.name %></dd>

          <dt>Message</dt>
          <dd><%= receipt.message.body %></dd>
        </dl>
      </div>
    </div>
    <% end %>
  </div>
</div>